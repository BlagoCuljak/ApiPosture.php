{
    "name": "apiposture/apiposture",
    "description": "Static analysis tool that scans PHP projects for API security posture issues",
    "type": "library",
    "license": "MIT",
    "keywords": ["security", "api", "static-analysis", "laravel", "symfony", "slim"],
    "require": {
        "php": "^8.1",
        "nikic/php-parser": "^5.0",
        "symfony/console": "^6.0|^7.0",
        "symfony/finder": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "ApiPosture\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApiPosture\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/apiposture"
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
